<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">


    <TextView
        android:id="@+id/b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Total a Recuperar"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtRecuperar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/b"
        android:layout_marginStart="139dp"
        android:text="$ ------"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/b"
        android:layout_marginTop="10dp"
        android:text="Total a Ganar"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtGanar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtRecuperar"
        android:layout_alignTop="@+id/c"
        android:text="$ ------"
        android:textColor="@color/green_primary_dark"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/c"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:text="Total"/>

    <TextView
        android:id="@+id/txtTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$ ------"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/blue_primary_dark"
        android:layout_alignStart="@id/txtGanar"
        android:layout_alignTop="@id/d"/>

</RelativeLayout>
